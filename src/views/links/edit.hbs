<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/links/edit/{{link.id}}" method="POST">
                        <div class="form-group">
                            <input type="text" value="{{link.nombre}}" name="nombre" placeholder="Name" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.apellido}}"  name="apellido" placeholder="Apellido" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.cedula}}"  name="cedula" placeholder="Cedula" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.fecha_de_nacimiento}}" name="fecha" placeholder="Fecha de Nacimiento" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="email" value="{{link.email}}" name="email" placeholder="Correo" class="form-control" autofocus>
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.celular}}" name="celular" placeholder="Celular" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.direccion}}" name="direccion" placeholder="Direccion" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" value="{{link.pais}}" name="pais" placeholder="Pais" class="form-control">
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-success btn-block">
                                Enviar Registro
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>